<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".ui.fragments.LoginFragment">

    <EditText
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="10dp"
        android:autofillHints="username"
        android:background="@color/dark"
        android:fontFamily="sans-serif-light"
        android:hint="Username"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:autofillHints="username"
        android:background="@color/dark"
        android:fontFamily="sans-serif-light"
        android:hint="Email"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/uname"
        android:layout_alignEnd="@+id/uname"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="262dp"
        android:autofillHints="password"
        android:background="@color/dark"
        android:fontFamily="sans-serif-light"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/uname"
        android:layout_alignEnd="@+id/uname"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="338dp"
        android:autofillHints="password"
        android:background="@color/dark"
        android:fontFamily="sans-serif-light"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="#FFFFFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pass2"
        android:layout_alignEnd="@+id/pass2"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="173dp"
        android:background="@drawable/round_bg"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="589dp"
        android:text="SIGN IN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="601dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="111dp"
        android:text="Already have an account?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/signupBtn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="634dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="62dp"
        android:text="Sign in"
        android:textColor="@color/gradient_2_blue"
        android:textSize="18sp"
        android:textStyle="bold" />


